<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Top Row: Current Price (left) and Upcoming Prices (right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <!-- Current Price Section - Smaller on left -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/current_price_background"
            android:padding="4dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nu"
                android:textSize="7sp"
                android:textColor="#FFFFFF"
                android:alpha="0.8" />

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00"
                android:textSize="7sp"
                android:textColor="#FFFFFF"
                android:alpha="0.7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.23"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kr"
                    android:textSize="7sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="1dp"
                    android:alpha="0.9" />
            </LinearLayout>
        </LinearLayout>

        <!-- Upcoming Prices - 6 periods on right -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kommande:"
                android:textSize="7sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:alpha="0.9" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:rowCount="2"
                android:alignmentMode="alignBounds">

                <!-- 6 upcoming periods -->
                <TextView
                    android:id="@+id/upcoming_time_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="14:15"
                    android:textSize="6sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/upcoming_time_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="14:30"
                    android:textSize="6sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/upcoming_time_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="14:45"
                    android:textSize="6sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/upcoming_time_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="15:00"
                    android:textSize="6sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/upcoming_time_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="15:15"
                    android:textSize="6sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/upcoming_time_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="15:30"
                    android:textSize="6sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.8" />

                <!-- Second row - Prices -->
                <TextView
                    android:id="@+id/upcoming_price_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="1.20"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/upcoming_price_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="1.18"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/upcoming_price_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="1.25"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/upcoming_price_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="1.30"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/upcoming_price_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="1.22"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/upcoming_price_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="1.19"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Widget Title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elpris - SE3"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:alpha="0.8" />

    <!-- Price Chart Image -->
    <ImageView
        android:id="@+id/price_chart_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:contentDescription="Price chart" />

</LinearLayout>
